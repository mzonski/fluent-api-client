{
	"name": "fluent-api-client",
	"license": "MIT",
	"scripts": {
		"dev": "rollup -c --watch --environment NODE_ENV:development",
		"run": "node dist/fluent-api-client.min.js",
		"build:prod": "rollup -c --environment NODE_ENV:production",
		"build:prod:esm": "rollup -c --environment NODE_ENV:production,ROLLUP_OUTPUT_FORMAT:esm",
		"build:dev": "rollup -c --environment NODE_ENV:development,ROLLUP_OUTPUT_FORMAT:esm",
		"build:dev:all": "rollup -c --environment NODE_ENV:development,ROLLUP_OUTPUT_FORMAT:all",
		"npm:verify": "npm run build:prod && cd dist && npm pack --dry-run",
		"npm:publish": "cd dist && npm publish",
		"--------": "echo FORMATING",
		"format:write": "prettier --write \"**/*.{json,md}\" \".eslintrc.cjs\" \"*.config.{cjs,mjs}\"",
		"lint": "eslint  --report-unused-disable-directives --max-warnings 0 src config",
		"lint:fix": "npm run lint -- --fix",
		"-------": "echo GULP",
		"gulp": "gulp --gulpfile ./config/build/gulp/.gulpfile.mjs",
		"gulp:build:prod": "npm run gulp -- build",
		"gulp:build:dev": "npm run gulp -- build --dev",
		"gulp:publish": "npm run gulp -- build-and-publish"
	},
	"devDependencies": {
		"@kineticcafe/rollup-plugin-delete": "^3",
		"@rollup/plugin-commonjs": "^26",
		"@rollup/plugin-json": "^6",
		"@rollup/plugin-node-resolve": "^15",
		"@rollup/plugin-run": "^3",
		"@rollup/plugin-terser": "^0",
		"@rollup/plugin-typescript": "^11",
		"@typescript-eslint/eslint-plugin": "^7",
		"@typescript-eslint/parser": "^7",
		"chalk": "^5.3.0",
		"dotenv": "^16",
		"eslint": "^8",
		"eslint-plugin-vitest-globals": "^1.5.0",
		"eslint-plugin-zonia": "1.0.6",
		"gulp": "^5.0.0",
		"prettier": "^3",
		"rollup": "^4",
		"rollup-plugin-copy": "^3",
		"rollup-plugin-dts": "^6",
		"rollup-plugin-node-externals": "^7",
		"semver": "^7.6.3",
		"source-map-support": "^0",
		"tslib": "^2",
		"typescript": "^5",
		"vitest": "^2",
		"zonia-config-prettier": "^1"
	},
	"prettier": "zonia-config-prettier"
}
