{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "Decorators"],
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "../../dist",
    "rootDir": "../../src",
    "removeComments": true,
    "noEmit": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node"
  },
  "include": [
    "../../src"
  ],
  "exclude": [
    "../../_ignored"
  ]
}