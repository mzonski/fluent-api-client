{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"declaration": true,
		"sourceMap": false,
		"outDir": "../../dist",
		"noEmit": false,
		"noUnusedLocals": true
	},
	"exclude": [
		// Ignored dir
		"../../_ignored",

		// Project
		"../build",
		"../../*.mjs",
		"../../*.ts",
		"../../*.cjs",

		// TESTS
		"../setupTests.ts",
		"../../**/__tests__/*"
	]
}
