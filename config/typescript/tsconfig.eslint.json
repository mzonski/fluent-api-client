{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"rootDir": "../..",
		"types": ["vitest/globals", "node"]
	},
	"include": [
		// Source
		"../../src",
		// Project
		"../build",
		"../../*.mjs",
		"../../*.ts",
		"../../*.cjs",
		// Tests
		"../setupTests.ts",
		"../../**/__tests__/*"
	],
	"references": [
		{
			"path": "./tsconfig.vitest.json"
		}
	]
}
